<style>
    .icon-input-container .form-control {
        border-right: none;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .icon-input-container .icon-container {
        border: 2px solid var(--col-primary);
        background-color: var(--col-primary);
        color: #fff;
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }
</style>

<div class="{{ attr.class }} form-input-around">
    <label class="field-label">{{ label }}</label>

    <div class="container-fluid icon-input-container" id="app-icon-input-{{ name }}">
        <div class="row">
            <div class="col-11 p-0">
                <input 
                    name="{{ name }}[value]" 
                    type="{{ type }}" 
                    class="form-control" 
                    id="{{ attr.id }}" 
                    placeholder="{{ attr.placeholder }}"
                    {% if attr.disabled %}
                        disabled="disabled"
                    {% endif %}
                    v-model="icon"
                >
            </div>
            <div class="col-sm-1 p-0 icon-container">
                <i v-bind:class="'ti ti-' + icon"></i>
            </div>
        </div>
    </div>
</div>

<script>
    window.iconInput['{{ name }}'] = new Vue({
        el: '#app-icon-input-{{ name }}',
        delimiters: ['${', '}'],
        data: {
            icon: '{{ value ?? "box" }}'
        },
    });
</script>
{{ header }}
{{ nav }}

<style>
    form {
        display: block;
        width: 100%;
    }

    .form-control {
        margin-bottom: 10px;
    }

    .form-group {
        border-bottom: 1px solid #ccc;
    }
</style>

<div class="main-content">
    <div class="col-lg-12 headline headline-button ">
        <div style="background-image: url('{{ __img__ }}icons/{{ icon }}')" class="icon"></div>
        <p class="title">
            {{ title ?? entityName|trans('entity/' ~ entityName) }}
            <span class="description">{{ description is not null ? description : 'Manage'|trans('global') ~ ' ' ~ entityName|trans('entity/' ~ entityName) }}</span>
        </p>

        <a href="{{ referer }}">
            <button class="btn btn-link close-button">
                <span><i class="fas fa-times"></i></span>
            </button>
        </a>
    </div>

    <div class="body">
        <div class="card">
            <div class="card-body">
                {{ form.render() }}
            </div>
            <div class="card-footer">
                {% if user|hasPermission('edit') %}
                    <a href="{{ path(entityName) }}/edit?id={{ entityId }}">
                        <button type="button" class="btn btn-yellow float-right" style="margin-left: 10px;">
                            <i class="fas fa-pencil-alt"></i> {{ 'Edit'|trans('global') }}
                        </button>
                    </a>
                {% endif %}

                {% if user|hasPermission('delete') %}
                    <a href="{{ path(entityName) }}/delete?id={{ entityId }}">
                        <button type="button" class="btn btn-danger float-right">
                            <i class="fas fa-trash-alt"></i> {{ 'Delete'|trans('global') }}
                        </button>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{{ footer }}
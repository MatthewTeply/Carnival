{{ header }}
{{ nav }}

<style>
 .list-table, .list-table .btn {
    font-size: 14px !important;
 }
</style>

<div class="main-content">
    <div class="col-lg-12 headline headline-button ">
        <h2>{{ title }}</h2>
        <a href="{{ path(entityName) }}/new">
            <button class="add-button" id="open-form">
                <span>Přidat {{ title }}</span>
            </button>
        </a>
    </div>
    {% if entities|length == 0 %}
        <h1>Nic tu není...</h1>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    {% for column in columns %}
                        <th>{{ column.label }}</th>
                    {% endfor %}
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        {% for column in columns %}
                            <td>{{ entity[column.name] }}</td>
                        {% endfor %}
                        <td><div class="table-buttons">
                            <a href="{{ path(entityName) }}/edit/{{ entity.id }}"><button class="blue-button right-radius-none right-border-none">Upravit</button></a>
                            <a href="{{ path(entityName) }}/delete/{{ entity.id }}"><button class="yellow-button left-radius-none left-border-none delete-button"><img src="/app/carnival/public/assets/images/icons/delete-dark.svg"></button></a></div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>

{{ footer }}
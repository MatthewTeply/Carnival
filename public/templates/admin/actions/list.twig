{{ header }}
{{ nav }}

<link href="{{ __css__ }}/actions/list.css" rel="stylesheet">

<style>
 .list-table, .list-table .btn {
    font-size: 14px !important;
 }
</style>

<div class="main-content">
    <div class="col-lg-12 headline headline-button ">
        <h2>{{ title }}</h2>
        {% if new %}
            <a href="{{ path(entityName) }}/new">
                <button class="add-button" id="open-form">
                    <span>{% if labels.new is null %} Přidat {{ title }} {% else %} {{ labels.new }} {% endif %}</span>
                </button>
            </a>
        {% endif %}
    </div>
    {% if entities|length == 0 %}
        <div class="empty-content"><p>Zatím tu nic není...</p></div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    {% for column in columns %}
                        <th>{{ column.label }}</th>
                    {% endfor %}
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        {% for column in columns %}
                            <td>{{ entity[column.name] }}</td>
                        {% endfor %}
                        <td><div class="table-buttons">
                            {% if edit %}
                                <a href="{{ path(entityName) }}/edit?id={{ entity.id }}" class="link">{{ labels.edit }}</a>
                            {% endif %}
                            {% if delete %}
                                <a href="{{ path(entityName) }}/delete?id={{ entity.id }}" class="link text-danger">{{ labels.delete }}</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        {{ resultsCount }} Výsledků
                    </td>
                    <td colspan="{{ entities|first|length - 2 }}"></td>
                    <td class="text-right list-pagination">
                        <a href="{{ path(entityName) }}/list?page={{ page - 1 }}" {{ (page == 1) ? 'class="disabled"' : '' }}>Previous</a>
                         | 
                        <a href="{{ path(entityName) }}/list?page={{ page + 1 }}" {{ (page == pagesCount) ? 'class="disabled"' : '' }}>Next</a>
                        ({{ page }} / {{ pagesCount }})
                    </td>
                </tr>
            </tfoot>
        </table>
    {% endif %}
</div>

{{ footer }}
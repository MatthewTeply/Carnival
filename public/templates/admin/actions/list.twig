{{ header }}
{{ nav }}

<link href="{{ __css__ }}admin/actions/list.css" rel="stylesheet">

<style>
 .list-table, .list-table .btn {
    font-size: 14px !important;
 }
</style>

<div class="main-content">
    <div class="col-lg-12 headline headline-button ">
        <h2>{{ title ?? entityName|trans('entity/' ~ entityName) }}</h2>
        {% if new %}
            <a href="{{ path(entityName) }}/new">
                <button class="add-button" id="open-form">
                    <span>{{ labels.new ?? 'New'|trans('global') }}</span>
                </button>
            </a>
        {% endif %}
    </div>

    {% if entities|length == 0 %}
        <div class="empty-content"><p>Zatím tu nic není...</p></div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    {% for column in columns %}
                        <th>{{ column.label|trans('entity/' ~ entityName) }}</th>
                    {% endfor %}
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        {% for column in columns %}
                            <td>{{ entity[column.name] }}</td>
                        {% endfor %}
                        <td><div class="table-buttons">
                            {% if edit %}
                                <a href="{{ path(entityName) }}/edit?id={{ entity.id }}" class="link">{{ labels.edit ?? 'Edit'|trans('global') }}</a>
                            {% endif %}
                            {% if delete %}
                                <button data-toggle="modal" data-target="#delete-entity-modal-{{ entity.id }}" class="btn link text-danger">{{ 'Delete'|trans('global') }}</button>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        {{ resultsCount }} {{ 'Results'|trans('action/list') }}
                    </td>
                    {% if (columns|length - 1) > 0 %}
                        <td colspan="{{ columns|length - 1 }}"></td>
                    {% endif %}
                    <td class="text-right list-pagination">
                        <a href="{{ path(entityName) }}/list?page={{ page - 1 }}" {{ (page == 1) ? 'class="disabled"' : '' }}>{{ 'Previous'|trans('action/list') }}</a>
                         | 
                        <a href="{{ path(entityName) }}/list?page={{ page + 1 }}" {{ (page == pagesCount) ? 'class="disabled"' : '' }}>{{ 'Next'|trans('action/list') }}</a>
                        ({{ page }} / {{ pagesCount }})
                    </td>
                </tr>
            </tfoot>
        </table>
    {% endif %}
</div>

{% for entity in entities %}

    <!-- Entity delete modal -->
    <div class="modal fade" id="delete-entity-modal-{{ entity.id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-entity-modal-{{ entity.id }}Label">{{ 'Delete'|trans('global') }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'Are you sure? This action is pernament.'|trans('action/list') }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans('global') }}</button>
                    <a href="{{ path(entityName) }}/delete?id={{ entity.id }}"class="link text-danger">
                        <button type="button" class="btn btn-danger">{{ 'Delete'|trans('global') }}</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endfor %}

{{ footer }}
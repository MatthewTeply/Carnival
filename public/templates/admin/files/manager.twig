{{ header }}
{{ nav }}

<link href="{{ __css__ }}admin/actions/list.css" rel="stylesheet">
<link href="{{ __css__ }}admin/files/manager.css" rel="stylesheet">

<div class="main-content">
    <div class="col-lg-12 headline headline-button ">
        <div style="background-image: url('{{ __img__ }}icons/upload.svg')" class="icon"></div>
        <p class="title">
            {{ 'File manager'|trans('files/manager') }}
            <span class="description">{{ description is not null ? description : 'Manage'|trans('global') ~ ' ' ~ 'Files'|trans('files/manager') }}</span>
        </p>

        {% if user|hasPermission('createDir') %}
            <button type="button" class="add-button" id="create-dir" data-toggle="modal" data-target="#create-dir-modal">
                <span><i class="fas fa-folder-plus"></i> {{ 'New folder'|trans('files/manager') }}</span>
            </button>
        {% endif %}

        <button type="button" class="add-button" id="open-form">
            <span><i class="fas fa-upload"></i> {{ 'Upload files'|trans('files/manager') }}</span>
        </button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>{{ 'Filename'|trans('files/manager') }}</th>
                <th>{{ 'Owner'|trans('files/manager') }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for key, dir in dirs %}
                <tr>
                    <td class='icon'>
                        {% if dir.icon %}
                            {{ dir.icon|raw }}
                        {% else %}
                            <i class="fas fa-folder-open"></i>
                        {% endif %}
                    </td>
                    <td><a href="{{ path('FileManager') }}?dir={{ dir.relativePath }}">{{ dir.filename }}</a></td>
                    <td>
                        {% if not dir.isBack %}
                            {% if dir.synced %}
                                <a href="{{ path('User') }}/show?id={{ dir.user.id }}">
                                    <img src="{{ __webStorage__ ~ dir.user.img }}" class="user-icon" alt="">
                                    {{ dir.user.username }}
                                </a>
                            {% else %}
                                <i class="fas fa-hdd"></i> server
                            {% endif %}
                        {% endif %}
                    </td>
                    <td>
                        {% if not dir.isBack %}
                            <div class="table-buttons">
                                {% if user|hasPermission('edit') %}
                                    <button type="button" data-toggle="modal" class="btn link">{{ 'Edit'|trans('global') }}</button>
                                {% endif %}

                                {% if user|hasPermission('delete') %}
                                    <button type="button" data-toggle="modal" data-target="#delete-dir-modal-{{ key }}" class="btn link text-danger">{{ 'Delete'|trans('global') }}</button>
                                {% endif %}
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            {% for key, file in files %}
                <tr>
                    <td class='icon'>
                        {% if file.isImg %}
                            <img src="{{ __webStorage__ ~ file.filename }}" alt="">
                        {% else %}  
                            <i class="fas fa-file"></i>
                        {% endif %}
                    </td>
                    <td>{{ file.filename }}</td>
                    <td>
                        {% if file.synced %}
                            <a href="{{ path('User') }}/show?id={{ file.user.id }}">
                                <img src="{{ __webStorage__ ~ file.user.img }}" class="user-icon" alt="">
                                {{ file.user.username }}
                            </a>
                        {% else %}
                            <i class="fas fa-hdd"></i> server
                        {% endif %}
                    </td>
                    <td>
                        <div class="table-buttons">
                            {% if user|hasPermission('edit') %}
                                <button type="button" data-toggle="modal" class="btn link">{{ 'Edit'|trans('global') }}</button>
                            {% endif %}

                            {% if user|hasPermission('delete') %}
                                <button type="button" data-toggle="modal" data-target="#delete-file-modal-{{ key }}" class="btn link text-danger">{{ 'Delete'|trans('global') }}</button>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% for key, dir in dirs %}

    {% if not dir.isBack %}
        <!-- Dir delete modal -->
        <div class="modal fade" id="delete-dir-modal-{{ key }}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="delete-dir-modal-{{ key }}Label">{{ 'Delete'|trans('global') }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ 'Are you sure? This action is pernament.'|trans('action/list') }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans('global') }}</button>
                        <a href="{{ path('FileManager') }}/delete?path={{ dir.relativePath }}" class="link text-danger" data-dismiss="modal">
                            <button type="button" class="btn btn-danger">{{ 'Delete'|trans('global') }}</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endfor %}

{% for key, file in files %}

    <!-- File delete modal -->
    <div class="modal fade" id="delete-file-modal-{{ key }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="delete-file-modal-{{ key }}Label">{{ 'Delete'|trans('global') }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'Are you sure? This action is pernament.'|trans('action/list') }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans('global') }}</button>
                    <a href="{{ path('FileManager') }}/delete?path={{ file.relativePath }}" class="link text-danger" carnival-link="true">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">{{ 'Delete'|trans('global') }}</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endfor %}

<!-- Directory create modal -->
<div class="modal fade" id="create-dir-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form action="{{ path('FileManager') }}/createDir" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="create-dir-modalLabel">{{ 'New folder'|trans('files/manager') }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="path" v-bind:value="'{{ currentDir }}/' + dirName">
                    <input type="hidden" name="currentDir" value="{{ currentDir }}">

                    <input type="text" class="form-control" id="create-dir-name" placeholder="{{ 'Folder name'|trans('files/manager') }}" v-model="dirName">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'Close'|trans('global') }}</button>
                    <button type="submit" class="btn btn-yellow">{{ 'Create'|trans('global') }}</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="{{ __scripts__ }}vue.js"></script>
<script src="{{ __scripts__ }}admin/files/manager.js"></script>

{{ footer }}